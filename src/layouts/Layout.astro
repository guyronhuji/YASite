---
import '../styles/global.css';
import Sidebar from '../components/Sidebar.astro';

interface Props {
	title?: string;
	lang?: string;
    backgroundImage?: string;
}

const { title = "Academic Website", lang = "en", backgroundImage } = Astro.props;
const dir = lang === 'he' || lang === 'ar' ? 'rtl' : 'ltr';
import { ViewTransitions } from 'astro:transitions';
---

<!doctype html>
<html lang={lang} dir={dir} class={`scroll-smooth text-base-content ${backgroundImage ? '' : 'bg-base-100'}`} data-theme="pastel">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
        <ViewTransitions />
	</head>
	<body class="min-h-screen relative">
        {backgroundImage && (
            <div class="fixed inset-0 z-0 pointer-events-none">
                <img src={encodeURI(backgroundImage)} alt="" class="w-full h-full object-cover opacity-40" />
            </div>
        )}
		<div class="relative z-10">
            <Sidebar lang={lang} hasBackground={!!backgroundImage}>
            <slot />
        </Sidebar>
        </div>
	</body>
</html>
