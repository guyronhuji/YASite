---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";

export function getStaticPaths() {
    return [
        { params: { lang: "en" } },
        { params: { lang: "he" } },
        { params: { lang: "ar" } },
    ];
}

const { lang } = Astro.params;
import { getEntry, getCollection } from "astro:content";

const allContacts = await getCollection("contact");
const contact = allContacts.find(
    (c) =>
        c.slug === lang ||
        c.slug === `${lang}/index` ||
        c.id === `${lang}/index.md`,
);
const bio = await getEntry("bio", lang as any);

const { email, social } = bio?.data || {};
const title =
    contact?.data?.title ||
    (lang === "he" ? "צרו קשר" : lang === "ar" ? "اتصل بنا" : "Contact");
const backgroundImage = contact?.data?.backgroundImage;

const labels = {
    en: { email: "Email", social: "Social Media", getInTouch: "Get in Touch" },
    he: { email: "אימייל", social: "רשתות חברתיות", getInTouch: "צרו קשר" },
    ar: {
        email: "البريد الإلكتروني",
        social: "وسائل التواصل الاجتماعي",
        getInTouch: "تواصل معنا",
    },
};
const t = labels[lang as keyof typeof labels] || labels.en;
---

<Layout title={title} lang={lang} backgroundImage={backgroundImage}>
    <main class="py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto">
            <h1
                class="text-3xl font-extrabold text-[#000040] mb-8 pb-4 border-b border-gray-200 font-serif"
            >
                {title}
            </h1>

            <div class="bg-white shadow rounded-lg overflow-hidden">
                <div class="p-8">
                    <h2 class="text-2xl font-bold text-gray-900 mb-6">
                        {t.getInTouch}
                    </h2>

                    <div class="space-y-6">
                        {/* Email Section */}
                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <svg
                                    class="h-6 w-6 text-primary"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                    ></path>
                                </svg>
                            </div>
                            <div class="ml-4">
                                <p class="text-lg font-medium text-gray-900">
                                    {t.email}
                                </p>
                                <a
                                    href={`mailto:${email || "contact@example.com"}`}
                                    class="mt-1 text-lg text-primary hover:underline block"
                                >
                                    {email || "contact@example.com"}
                                </a>
                            </div>
                        </div>

                        {/* Address Section */}
                        {
                            bio?.data.address && (
                                <div class="flex items-start pt-6 border-t border-gray-100">
                                    <div class="flex-shrink-0">
                                        <svg
                                            class="h-6 w-6 text-primary"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                            stroke="currentColor"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                            />
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                            />
                                        </svg>
                                    </div>
                                    <div class="ml-4">
                                        <p class="text-lg font-medium text-gray-900">
                                            Address
                                        </p>
                                        <p class="mt-1 text-lg text-gray-600 whitespace-pre-line">
                                            {bio.data.address}
                                        </p>
                                    </div>
                                </div>
                            )
                        }

                        {/* Social Section */}
                        {
                            social && social.length > 0 && (
                                <div class="flex items-start pt-6 border-t border-gray-100">
                                    <div class="flex-shrink-0">
                                        <svg
                                            class="h-6 w-6 text-primary"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                            stroke="currentColor"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
                                            />
                                        </svg>
                                    </div>
                                    <div class="ml-4 w-full">
                                        <p class="text-lg font-medium text-gray-900 mb-3">
                                            {t.social}
                                        </p>
                                        <div class="flex flex-wrap gap-4">
                                            {social.map((item) => {
                                                const label =
                                                    item.label?.toLowerCase() ||
                                                    "";
                                                // Simple mapping for icons
                                                let iconPath = null;
                                                let viewBox = "0 0 24 24"; // Default viewbox
                                                let isFill = true; // Most brand icons are fill-based

                                                if (
                                                    label.includes("twitter") ||
                                                    label.includes("x")
                                                ) {
                                                    iconPath =
                                                        "M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z";
                                                } else if (
                                                    label.includes("facebook")
                                                ) {
                                                    iconPath =
                                                        "M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z";
                                                } else if (
                                                    label.includes("linkedin")
                                                ) {
                                                    iconPath =
                                                        "M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z";
                                                } else if (
                                                    label.includes("scholar") ||
                                                    label.includes("google")
                                                ) {
                                                    iconPath =
                                                        "M12 24a7 7 0 1 1 0-14 7 7 0 0 1 0 14zm0-24L0 9.5l4.838 3.94A8 8 0 0 1 12 9a8 8 0 0 1 7.162 4.44L24 9.5z";
                                                } else if (
                                                    label.includes("academia")
                                                ) {
                                                    // Custom A shape or similar for Academia.edu
                                                    iconPath =
                                                        "M22.033 21.18L13.77.459H7.869l1.049 2.623L1.836 21.18C1.574 22.098.787 22.23 0 22.361v1.18h6.82v-1.18C4.984 22.23 3.934 21.967 4.721 20c.131-.131.656-1.574 1.311-3.41h8.393l1.18 3.016c.131.525.262.918.262 1.311 0 1.049-.918 1.443-2.623 1.443v1.18H24v-1.18c-.918-.13-1.705-.393-1.967-1.18zM6.82 14.361a363.303 363.303 0 0 0 3.279-8.525l3.41 8.525H6.82z";
                                                }

                                                if (iconPath) {
                                                    return (
                                                        <a
                                                            href={item.url}
                                                            target="_blank"
                                                            rel="noopener noreferrer"
                                                            class="text-gray-500 hover:text-primary transition-colors duration-200"
                                                            aria-label={
                                                                item.label
                                                            }
                                                        >
                                                            <svg
                                                                class="h-8 w-8"
                                                                fill="currentColor"
                                                                viewBox="0 0 24 24"
                                                            >
                                                                <path
                                                                    d={iconPath}
                                                                />
                                                            </svg>
                                                        </a>
                                                    );
                                                }

                                                // Fallback for others
                                                return (
                                                    <a
                                                        href={item.url}
                                                        target="_blank"
                                                        rel="noopener noreferrer"
                                                        class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary"
                                                    >
                                                        {item.label}
                                                    </a>
                                                );
                                            })}
                                        </div>
                                    </div>
                                </div>
                            )
                        }
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>
